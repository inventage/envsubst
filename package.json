{
  "name": "@inventage/envsubst",
  "version": "0.7.0",
  "description": "Environment variables substitution for Node",
  "license": "MIT",
  "author": "Peter Siska <psiska@inventage.com>",
  "homepage": "https://github.com/inventage/envsubst#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inventage/envsubst.git"
  },
  "bugs": {
    "url": "https://github.com/inventage/envsubst/issues"
  },
  "main": "src/utils.js",
  "bin": {
    "envsubst": "./bin/envsubst.js"
  },
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "dist": "npm run clean && npm run fetch && run-p -l dist:*",
    "dist:alpine": "pkg -t node16-alpine-x64 --out-path dist/alpine .",
    "dist:linux": "pkg -t node16-linux-x64 --out-path dist/linux .",
    "dist:macos": "pkg -t node16-macos-x64 --out-path dist/macos .",
    "dist:win": "pkg -t node16-win-x64 --out-path dist/win .",
    "fetch": "run-p -l fetch:*",
    "fetch:alpine": "pkg-fetch -f -n node16 -p alpine -a x64",
    "fetch:linux": "pkg-fetch -f -n node16 -p linux -a x64",
    "fetch:macos": "pkg-fetch -f -n node16 -p macos -a x64",
    "fetch:win": "pkg-fetch -f -n node16 -p win -a x64",
    "format": "prettier '**/*.js' --write",
    "lint": "prettier '**/*.js' --check",
    "prepare": "husky install",
    "test": "ava"
  },
  "dependencies": {
    "cli-table3": "^0.6.0",
    "escape-string-regexp": "^4.0.0",
    "globby": "^11.0.3",
    "meow": "^9.0.0",
    "string.prototype.matchall": "^4.0.6"
  },
  "devDependencies": {
    "@types/node": "^16.10.9",
    "ava": "^3.15.0",
    "dotenv": "^10.0.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "npm-run-all": "^4.1.5",
    "pkg": "5.3.3",
    "pkg-fetch": "3.2.3",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2"
  },
  "keywords": [
    "env",
    "environment",
    "envsubst",
    "node",
    "npm",
    "variables",
    "vars"
  ],
  "publishConfig": {
    "access": "public"
  }
}
