{
  "name": "@inventage/envsubst",
  "version": "0.14.0",
  "description": "Environment variables substitution for Node",
  "license": "MIT",
  "author": "Peter Siska <psiska@inventage.com>",
  "homepage": "https://github.com/inventage/envsubst#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inventage/envsubst.git"
  },
  "bugs": {
    "url": "https://github.com/inventage/envsubst/issues"
  },
  "main": "src/utils.js",
  "bin": {
    "envsubst": "./bin/envsubst.js"
  },
  "files": [
    "bin",
    "src"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "clean": "rimraf dist",
    "dist": "npm run clean && npm run fetch && run-s -l dist:*",
    "dist-arm": "npm run clean && npm run fetch-arm && run-s -l dist-arm:*",
    "dist-arm-macos": "npm run clean && npm run fetch-arm-macos && run-s -l dist-arm-macos:*",
    "dist:alpine": "pkg -t node18-alpine-x64 --out-path dist/alpine .",
    "dist:linux": "pkg -t node18-linux-x64 --out-path dist/linux .",
    "dist:macos": "pkg -t node18-macos-x64 --out-path dist/macos .",
    "dist:win": "pkg -t node18-win-x64 --out-path dist/win .",
    "dist-arm:alpine": "pkg -t node18-alpine-arm64 --out-path dist/alpine-arm64 .",
    "dist-arm:linux": "pkg -t node18-linux-arm64 --out-path dist/linux-arm64 .",
    "dist-arm-macos:macos": "pkg -t node18-macos-arm64 --out-path dist/macos-arm64 .",
    "fetch": "run-p -l fetch:*",
    "fetch-arm": "run-p -l fetch-arm:*",
    "fetch-arm-macos": "run-p -l fetch-arm-macos:*",
    "fetch:alpine": "pkg-fetch -f -n node18 -p alpine -a x64",
    "fetch:linux": "pkg-fetch -f -n node18 -p linux -a x64",
    "fetch:macos": "pkg-fetch -f -n node18 -p macos -a x64",
    "fetch-arm:alpine": "pkg-fetch -f -n node18 -p alpine -a arm64",
    "fetch-arm:linux": "pkg-fetch -f -n node18 -p linux -a arm64",
    "fetch-arm-macos:macos": "pkg-fetch -f -n node18 -p macos -a arm64",
    "fetch:win": "pkg-fetch -f -n node18 -p win -a x64",
    "format": "prettier '**/*.js' --write",
    "lint": "prettier '**/*.js' --check",
    "prepare": "husky install",
    "test": "ava"
  },
  "dependencies": {
    "cli-table3": "^0.6.3",
    "escape-string-regexp": "^4.0.0",
    "globby": "^11.1.0",
    "meow": "^9.0.0",
    "string.prototype.matchall": "^4.0.8"
  },
  "devDependencies": {
    "@types/node": "^20.4.9",
    "ava": "^5.3.1",
    "dotenv": "^16.3.1",
    "execa": "^5.1.1",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.8.1",
    "pkg-fetch": "^3.5.2",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1"
  },
  "keywords": [
    "env",
    "environment",
    "envsubst",
    "node",
    "npm",
    "variables",
    "vars"
  ],
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write"
    ]
  }
}
